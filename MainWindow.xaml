<Window x:Class="ElectroShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroShop"
        mc:Ignorable="d"
        Title="ElectroShop - Управление товарами" Height="500" Width="900">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Статус бар -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="LightBlue" Padding="10,5" Margin="0,0,0,10">
            <TextBlock Text="{Binding ModeDescription}" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Список товаров -->
        <GroupBox Grid.Row="1" Grid.Column="0" Header="Список товаров" Margin="0,0,10,0">
            <ListBox ItemsSource="{Binding Products}" 
                     SelectedItem="{Binding SelectedProduct}" 
                     IsEnabled="{Binding IsInViewMode}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Company}" FontSize="10" Foreground="Gray"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Форма редактирования -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Информация о товаре">
            <StackPanel Margin="10" DataContext="{Binding CurrentProduct}">
                <TextBlock Text="Название:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Компания:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Company, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Категория:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Цена:*" FontWeight="Bold"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Количество на складе:*" FontWeight="Bold"/>
                <TextBox Text="{Binding StockQuantity, UpdateSourceTrigger=PropertyChanged}" 
                         IsEnabled="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="* - обязательные поля" FontSize="10" Foreground="Gray" Margin="0,0,0,15"/>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Кнопки для режима просмотра -->
                    <Button Content="Добавить товар" 
                            Command="{Binding DataContext.NewCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Width="100" Margin="5,0"
                            Visibility="{Binding DataContext.IsInViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                    
                    <Button Content="Редактировать" 
                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Width="100" Margin="5,0"
                            Visibility="{Binding DataContext.IsInViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                    
                    <Button Content="Удалить" 
                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Width="100" Margin="5,0"
                            Visibility="{Binding DataContext.IsInViewMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>

                    <!-- Кнопки для режима редактирования -->
                    <Button Content="Сохранить" 
                            Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Width="100" Margin="5,0" Background="LightGreen"
                            Visibility="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                    
                    <Button Content="Отменить" 
                            Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Width="100" Margin="5,0" Background="LightCoral"
                            Visibility="{Binding DataContext.IsInEditMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
